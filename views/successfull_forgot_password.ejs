<form action="/users/resetNewPassword" method="POST">
  <h1>Congrats! your password is eligible to reset</h1>
  <input type="hidden" name="userId" value="<%= tokenResetingObj.userId %>" />
  <input type="hidden" name="token" value="<%= tokenResetingObj.token %>" />

  New Password:
  <input type="password" name="password" required />
  Confirm Password:
  <input type="password" name="confirmNewPassword" required />
  <input type="submit" value="Update Password" />
</form>
